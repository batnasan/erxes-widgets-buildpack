#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

build_dir=$1
cache_dir=$2
env_dir=$3
bp_dir=$(dirname $(dirname $0))

fetch_erxes_widgets() {
    local widgets_release_url="https://github.com/erxes/erxes-widgets/releases/download/0.12.0/erxes-widgets_0.12.0.tar.gz"
    echo -n "curl -L $widgets_release_url"
}

mkdir -p $build_dir
echo "-----> Created build_dir $build_dir"

$(fetch_erxes_widgets) | tar xzC $build_dir
echo "-----> Downloaded widgets to /app"

exit 0