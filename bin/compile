#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

build_dir=$1
cache_dir=$2
env_dir=$3
bp_dir=$(dirname $(dirname $0))

docs_dir="docs"
ui_dir="ui"
proc_file="Procfile"

fetch_erxes_widgets() {
    # TODO: update repo url after merge
    local widgets_release_url="https://github.com/batnasan/erxes.git"

    if [ -d $build_dir ]; then
        rm -rf $build_dir
    fi
    mkdir -p $build_dir
    echo "-----> Created build_dir $build_dir"

    git clone $widgets_release_url $build_dir
    cd $build_dir && git checkout heroku_button

    : '
    if [ -d $docs_dir ]; then
        rm -rf $docs_dir
        echo "-----> deleted docs dir"
    fi

    if [ -d $ui_dir ]; then
        rm -rf $ui_dir
        echo "-----> deleted ui dir"
    fi

    if [ -f $proc_file ]; then
        rm -rf $proc_file
        echo "-----> deleted Procfile"
    fi

    #mv $build_dir/widgets/* $build_dir/
    '
}

fetch_erxes_widgets
echo "-----> Downloaded widgets to /app"

exit 0